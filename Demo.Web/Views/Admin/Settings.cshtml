                                        <div class="form-group">
                                            <label class="col-xs-12 control-label">@Html.LabelFor(m => m.Entity.GooglePlusUrl)</label>
                                            <div class="col-xs-12">
                                                @Html.TextBoxFor(m => m.Entity.GooglePlusUrl, new { @class = "form-control input-xs" })
                                            </div>
                                        </div>
                                    </div>*@
