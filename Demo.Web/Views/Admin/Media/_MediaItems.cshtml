@model Demo.Model.Admin.Media.MediaIndexModel
@foreach (var item in Model.Results)
{
<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 pl-5 pr-5">
    <div class="panel">
        <div class="thumbnail mb-0">
            <img src="@Url.Content(item.Url)" class="fw-media" alt="@item.Title">
            <div class="text-semibold mt-5">@((item.Title ?? "(Chưa có tên)").Truncate(50))</div>
            <div class="text-size-mini">@item.FileType | @(item.Width)x@(item.Height) | @(item.FileSize)KB</div>
        </div>
    </div>
</div>
}