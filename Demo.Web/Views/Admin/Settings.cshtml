                                    <div class="form-group">
                                        <label class="col-xs-12 control-label">@Html.LabelFor(m => m.Entity.EmailContact)</label>
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.Entity.EmailContact, new { @class = "form-control input-xs" })
                                        </div>
                                    </div>
                                </div>
