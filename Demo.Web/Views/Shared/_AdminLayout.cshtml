                        <li class="dropdown dropdown-user">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <img id="navbar-user-avatar" src="@(SessionHelper.CurrentUser?.AvatarUrl ?? "/images/avatar_placeholder.png")" alt="">
