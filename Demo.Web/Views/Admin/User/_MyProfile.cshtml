@model Demo.Model.Admin.User.UserModel
<div class="row">
    <div class="col-lg-12">
        @Html.ValidationSummary(string.Empty, new { @class = "note note-danger" })
        <div class="thumbnail">
            <div class="thumb thumb-rounded thumb-slide">
                <img src="@(Model.AvatarUrl ?? "/images/avatar_placeholder.png")" alt="@Model.FullName">
                <div class="caption-overflow">
                    <span>
                        <a href="javascript:;" onclick="comdy.admin.updateAvatar($(this).parent().parent().prev())" class="btn border-white text-white btn-flat btn-icon btn-rounded btn-xs"><i class="icon-link2"></i></a>
                    </span>
                </div>
            </div>

            <div class="caption text-center">
                <h6 class="text-semibold no-margin">@Model.FullName <small class="display-block">@Model.Email</small></h6>
            </div>
            <div class="list-group no-border no-padding-top">
                @if (Model.IsAdmin)
                {
                    <div class="list-group-item text-primary"><i class="icon-user"></i> Bạn là Quản trị viên</div>
                }
                <div class="list-group-item"><i class="icon-users"></i> Phần quyền: @Model.RoleName</div>
                <div class="list-group-item"><i class="icon-lock2"></i> Tình trạng: @Model.Status.GetDescription()</div>
                <div class="list-group-item"><i class="icon-key"></i> Lần cuối đăng nhập: @Model.LastLoginDate.ToShortDateTimeNullString()</div>
            </div>
        </div>
    </div>
</div>
